# Package Configuration
DEVICES_FINGERPRINTING_ENABLED=true
DEVICES_GOOGLE_2FA_ENABLED=true
DEVICES_EVENT_TRACKING_ENABLED=true
DEVICES_TRACK_GUEST_SESSIONS=false
DEVICES_REGENERATE_DEVICES=false
DEVICES_ALLOW_UNKNOWN_DEVICES=false
DEVICES_ALLOW_BOT_DEVICES=false
DEVICES_ALLOW_DEVICE_MULTI_SESSION=false

# Authentication Routes
DEVICES_LOGIN_ROUTE_NAME=login
DEVICES_LOGOUT_ROUTE_NAME=logout
DEVICES_2FA_ROUTE_NAME=2fa

# Security Settings
DEVICES_INACTIVITY_SECONDS=1200
DEVICES_INACTIVITY_SESSION_BEHAVIOUR=terminate
DEVICES_EVENT_RETENTION_PERIOD=30
DEVICES_ORPHAN_RETENTION_PERIOD=1

# Transport Settings
DEVICES_DEVICE_ID_TRANSPORT=cookie
DEVICES_SESSION_ID_TRANSPORT=cookie
DEVICES_DEVICE_ID_PARAMETER=laravel_device_id
DEVICES_SESSION_ID_PARAMETER=laravel_session_id

# Fingerprinting Configuration
DEVICES_FINGERPRINT_CLIENT_LIBRARY=fingerprintjs
DEVICES_CLIENT_FINGERPRINT_TRANSPORT=cookie
DEVICES_CLIENT_FINGERPRINT_KEY=csf
DEVICES_FINGERPRINT_ID_COOKIE_NAME=laravel_device_fingerprint

# Cache Configuration
DEVICES_CACHE_STORE=file
DEVICES_CACHE_TTL_SESSION=3600
DEVICES_CACHE_TTL_DEVICE=3600
DEVICES_CACHE_TTL_LOCATION=2592000
DEVICES_CACHE_TTL_UA=2592000

# Google 2FA Settings
DEVICES_GOOGLE_2FA_WINDOW=1
DEVICES_GOOGLE_2FA_COMPANY="${APP_NAME}"
DEVICES_GOOGLE_2FA_QR_FORMAT=svg

# Authentication Configuration
DEVICES_AUTH_GUARD=web
DEVICES_AUTH_MIDDLEWARE=auth
DEVICES_AUTHENTICATABLE_CLASS="App\\Models\\User"
DEVICES_AUTHENTICATABLE_TABLE=users

# Route Configuration
DEVICES_LOAD_ROUTES=true
DEVICES_USE_REDIRECTS=true

# Session Configuration
DEVICES_START_NEW_SESSION_ON_LOGIN=false

# Development Pools
DEVICES_DEVELOPMENT_IP_POOL="138.100.56.25,2.153.101.169,104.26.14.39,104.26.3.12"
DEVICES_IGNORE_RESTART='[{"method":"GET","route":"polling/*"},{"method":"POST","route":"chat/*"}]'

# Cache Configuration for specific types
DEVICES_CACHE_ENABLED_TYPES="device,location,session,ua,event_type"

